              //-   |               This week
             
          p.text-center Lista de procedimientos guardados       
          div(class="container-xxl")
            div(class="row")
            div(class="col-lg-12")
                div(class="table-responsive")              
                  //- h2(class="text-center mt-3") Clinicas       

                  table(id="tablaClinicas" style="width: 100%" class="table table-striped table-bordered table-condensed")
                    thead(id="thListas" class="text-center")  
                      tr
                        th(hidden) id
                        th Nombre              
                        th Descripcion 
                        th Indicaciones
                        th Fecha creación                 
                        th Acciones                                
                    tbody(id='tbClinicas' class="text-center")
                      if(procedimientos)
                        each val in procedimientos
                          tr
                            td(hidden)= val.id
                            td= val.nombre                  
                            td= val.descripcion         
                            td= val.indicaciones                
                            td(data-order=moment(val.createdAt).format('YY/MM/DD'))= moment(val.createdAt).format('DD/MM/YYYY')
                            td
                              div(class="d-flex justify-content-center")
                                button(id='btnEditarProcedimiento' type="button" class="btn btn-success me-3" data-toggle="modal" ) Editar                 
                                //- a(href='/borrar/'+val.id   class="btn btn-danger" onclick="eliminar(this)") Borrar
                                button(id='btnBorrarProcedimiento' type="button" class="btn btn-danger me-3" data-toggle="modal" ) Borrar
            .row
                          div(class="modal fade" id="modalProcedimiento" tabindex="-1" aria-labelledby="modalProcedimiento" aria-hidden="true"  role="dialog")
                              div(class="modal-dialog")
                                  div(class="modal-content")
                                      div(class="modal-header")
                                          h5(class="modal-title" id="myModal") Editar Procedimiento
                                          button(type="button" class="btn-close" data-bs-dismiss="modal") 
                                          
                                      div(class="modal-body")
                                        form(method="post")
                                          .form-group
                                          input(id="id" name='id' hidden type="text")
                                          div(class="mb-3")
                                            label(for="nombre" class="col col-form-label") Nombre
                                            div(class="col-sm")
                                              input(id='nombre' name="nombre" type="text"  class="form-control" placeholder="Nombre"
                                              autofocus='' required)
                                          div(class="mb-3")
                                            label(for="descripcion" class="col col-form-label") Descripcion
                                            div(class="col-sm")
                                              input(id='descripcion' name="descripcion" type="text"  class="form-control" placeholder="Descripcion"
                                              autofocus='' required)
                                          div(class="mb-3")
                                            label(for="indicaciones" class="col col-form-label") Indicaciones
                                            div(class="col-sm")
                                              input(id='indicaciones' name="indicaciones" type="text"  class="form-control" placeholder="indicaciones"
                                              autofocus='' required)    
                                          div(class="mb-3")
                                            label(for="fecha_creacion" class="col col-form-label" ) Fecha creacion
                                            div(class="col-sm")
                                              input(id='fecha_creacion' name='fecha_creacion' class="form-control")
                                          div(class="modal-footer")
                                            button(type="button" class="btn btn-secondary" data-bs-dismiss="modal") Cerrar
                                            button(id="btnModalProcedimiento")
            .row
                          div(class="modal fade" id="modalProcedimientoBorrar" tabindex="-1" aria-labelledby="modalProcedimientoBorrar" aria-hidden="true"  role="dialog")
                              div(class="modal-dialog")
                                  div(class="modal-content")
                                      div(class="modal-header")
                                          h5(class="modal-title" id="myModal") Editar Procedimiento
                                          button(type="button" class="btn-close" data-bs-dismiss="modal") 
                                          
                                      div(class="modal-body")
                                        form(method="post")                              
                                          .form-group
                                          input(id="idb" name='id' hidden type="text")
                                          div(class="mb-3")
                                            label(for="nombre" class="col col-form-label") Nombre
                                            div(class="col-sm")
                                              input(id='nombreb' name="titulo" type="text"  class="form-control" placeholder="nombre"
                                              autofocus='' required)
                                          div(class="mb-3")
                                            label(for="descripcion" class="col col-form-label") Descripcion
                                            div(class="col-sm")
                                              input(id='descripcionb' name="descripcion" type="text"  class="form-control" disabled )
                                          div(class="mb-3")
                                            label(for="indicaciones" class="col col-form-label") Indicaciones
                                            div(class="col-sm")
                                              input(id='indicacionesb' name="indicaciones" type="text"  class="form-control" placeholder="indicaciones"
                                              autofocus='' required)    
                                                                                                        
                                          div(class="modal-footer")
                                            button(type="button" class="btn btn-secondary" data-bs-dismiss="modal") Cerrar
                                            button(id="btnModalProcedimientoBorrar")
  
